<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:context=".view.TextViewActivity">

        <TextView
                android:id="@+id/txt1"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_20"
                android:layout_margin="@dimen/dp_15"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:focusable="true"
                android:autoLink="web"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="@dimen/sp_16"
                android:textStyle="italic"
                android:text="www.baidu.com"/>
        <TextView
                android:id="@+id/txt2"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_20"
                android:layout_margin="@dimen/dp_15"
                android:textSize="@dimen/sp_16"
                android:text="Hello World!Hello EveryBody"/>
        <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView--txt3"/>
        <TextView
                android:id="@+id/txt3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text="TextView--txt3_1"/>
        <TextView
                android:id="@+id/txt3_2"
                android:layout_width="@dimen/dp_100"
                android:gravity="center"
                android:layout_height="@dimen/dp_20"
                android:text="TextView--txt2"/>
        <TextView
                android:id="@+id/txt4"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_20"
                android:layout_margin="@dimen/dp_15"
                android:focusable="true"
                android:textSize="@dimen/sp_16"
                android:focusableInTouchMode="true"/>
        <TextView
                android:id="@+id/txt5"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_20"
                android:textSize="@dimen/sp_16"
                android:layout_margin="@dimen/dp_15"
                android:text="Hello World!"/>

        <SimpleMarqueeView
                android:id="@+id/txt6"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_20"
                android:textSize="@dimen/sp_16"
                android:layout_margin="@dimen/dp_15"/>

        <SimpleMarqueeView
                android:id="@+id/txt7"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_20"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="为了实现多个TextView都可以滚动，进行简单的自定义View"
                android:textSize="@dimen/sp_16"
                android:layout_margin="@dimen/dp_15"/>

        <TextView
                android:id="@+id/txt8"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_20"
                android:textSize="@dimen/sp_16"
                android:layout_margin="@dimen/dp_15"
                android:text="Hello World!"/>


    </LinearLayout>

</ScrollView>